{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"files": {
		"ignore": [".next/*"]
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 2,
		"indentStyle": "space"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
        "useImportType": "error",
        "useExportType": "error"
      },
			"correctness": {
				"noUnusedImports": {
					"level": "info"
				}
			}
		}
		
	}
}
